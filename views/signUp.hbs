<div class="contact1">
    <div class="container-contact1">
        <div class="contact1-pic js-tilt" data-tilt>
            <img src="/sign-up.png" alt="IMG">
        </div>

        <form action="/signUp/createUserAccount" method="POST" class="contact1-form validate-form">
            <span class="contact1-form-title">
                Create Account
            </span>
            <div class="wrap-input1 validate-input" data-validate = "Name is required">
					<input class="input1" type="text" name="name" placeholder="Username" value="{{username}}" maxlength="20">
					<span class="shadow-input1"></span>
			</div>

            <div class="wrap-input1 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
                <input class="input1" type="email" name="email" value="{{email}}" placeholder="Email">
                <span class="shadow-input1"></span>
            </div>

            <div class="wrap-input1 validate-input" data-validate = "Subject is required">
                <input class="input1" type="password" name="password" placeholder="Password" max="25">
                <span class="shadow-input1"></span>
            </div>

            <div class="wrap-input1 validate-input" data-validate = "Subject is required">
                <input class="input1" type="password" name="repeatPassword" placeholder="Repeat Password" max="25">
                <span class="shadow-input1"></span>
            </div>
            <br>
            <p style="color: red;">{{errors}}</p>

            <div class="container-contact1-form-btn">
                <button class="contact1-form-btn" type="submit">
                    <span>
                        Sign Up
                        <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>