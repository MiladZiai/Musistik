<div class="contact1">
    <div class="container-contact1" style="justify-content: center; width: 600px;">
        <form class="contact1-form validate-form" style="min-width: 340px;" action="/library/addSong" method="POST">
            
            <span class="contact1-form-title">
                <!-- create comment -->
            </span>
            <input type="hidden" name="playlistId" value="{{playlistId}}">
            <div class="wrap-input1 validate-input">
                <input class="input1" type="text" name="title" placeholder="Title" maxlength="25" required="required">
                <span class="shadow-input1"></span>
            </div>

            <div class="wrap-input1 validate-input">
                <input class="input1" type="text" name="artist" placeholder="Artist Name" maxlength="25" required="required">
                <span class="shadow-input1"></span>
            </div>

            <div class="wrap-input1 validate-input">
                <input class="input1" type="text" name="genre" placeholder="Genre" maxlength="25" required="required">
                <span class="shadow-input1"></span>
            </div>

            <br>
            <p style="color: red;">{{errors}}</p>

            <div class="container-contact1-form-btn">
                <button class="contact1-form-btn" type="submit">
                    <span>
                        Add Song
                        <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                    </span>
                </button>
            </div>

        </form>
    </div>
</div>